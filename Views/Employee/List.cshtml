<style>
    @@import "bourbon";

    body {
        background: #eee !important;
    }

    .wrapper {
        margin-top: 50px;
        margin-bottom: 80px;
    }

    .form-signin {
        max-width: 80%;
        padding: 15px 35px 45px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,0.1);
        .form-signin-heading, .checkbox;

    {
        margin-bottom: 30px;
    }

    .checkbox {
        font-weight: normal;
    }

    .form-control {
        position: relative;
        font-size: 16px;
        height: auto;
        padding: 10px;
        @@include box-sizing(border-box);
        &:focus;

    {
        z-index: 2;
    }

    }

    input[type="text"] {
        margin-bottom: -1px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    input[type="password"] {
        margin-bottom: 20px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

    }
</style>

<div class="wrapper" ng-init="getEmployees();">
    <div class="form-signin">
        <h2 class="form-signin-heading">Employee List</h2>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Employee Detail</div>
                    <div class="panel-body">
                        <table st-table="display_records" st-safe-src="employees" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>DOB</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Department</th>
                                    <th>Designation</th>
                                    <th>Joining Date</th>
                                    <th>Action</th>
                                </tr>
                                <tr>
                                    <th colspan="8">
                                        <input st-search placeholder="global search" class="input-sm form-control" type="search" />
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-select-row="row" st-select-mode="multiple" ng-repeat="row in display_records">
                                    <td>{{row.Name}}</td>
                                    <td>{{row.DOB}}</td>
                                    <td>{{row.Email}}</td>
                                    <td>{{row.Mobile}}</td>
                                    <td>{{row.DepartmentName}}</td>
                                    <td>{{row.DesignationName}}</td>
                                    <td>{{row.JoiningDate}}</td>                                    
                                    <td><a ng-href="{{'#!/AddEmployee/' + row.Id}}" class="glyphicon glyphicon-edit"></a></td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-center">
                                        <div st-pagination="" st-items-by-page="itemsByPage"></div>
                                    </td>
                                </tr>
                            </tfoot>

                        </table>


                    </div>
                </div>

            </div>
            <div class="col-md-0;">
            </div>

        </div>
    </div>

    
    
</div>