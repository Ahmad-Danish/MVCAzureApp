<style>
    @@import "bourbon";

    body {
        background: #eee !important;
    }

    .wrapper {
        margin-top: 50px;
        margin-bottom: 80px;
    }

    .form-signin {
        max-width: 55%;
        padding: 15px 35px 45px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,0.1);
        .form-signin-heading, .checkbox;

    {
        margin-bottom: 30px;
    }

    .checkbox {
        font-weight: normal;
    }

    .form-control {
        position: relative;
        font-size: 16px;
        height: auto;
        padding: 10px;
        @@include box-sizing(border-box);
        &:focus;

    {
        z-index: 2;
    }

    }

    input[type="text"] {
        margin-bottom: -1px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    input[type="password"] {
        margin-bottom: 20px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

    }
</style>


<div class="wrapper">
    <div class="form-signin">
        <h2 class="form-signin-heading">Register Department</h2>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Department Detail</div>
                    <div class="panel-body">
                        <form name="depform" novalidate>
                            <div class="form-group">
                                <label for="email">Department Name:</label>                               
                                <input type="text" name="depname" class="form-control" id="txtDepartmentName" 
                                placeholder="Enter Department Name" style="width: 50%;" ng-model="Department.DepartmentName" required>
                                <span style="color:red" ng-show="(depform.depname.$dirty && depform.depname.$invalid) || showmsg">                                
                                <span ng-show="depform.depname.$error.required">Department name is required.</span>
                                </span>
                            </div>
                            <div class="form-group">
                                <label>Department Description:</label>                                
                                <textarea rows="4" cols="10" class="form-control" id="txtDepartmentDescription" name="depdesc" 
                                placeholder="Enter Department Description" ng-model="Department.DepartmentDesc" required></textarea>
                                <span style="color:red" ng-show="(depform.depdesc.$dirty && depform.depdesc.$invalid) || showmsg">
                                <span ng-show="depform.depdesc.$error.required">Department description is required.</span>
                                </span>
                            </div>

                            <div class="form-group">
                                <button type="button" class="btn btn-primary" ng-click="isFormValid()">Submit</button>
                                <button type="button" style="display:none" class="btn btn-primary" ng-click="AddUpdateDepartment()"  
                                 ng-disabled= "depform.$invalid||depform.depname.$dirty && depform.depname.$invalid || depform.depdesc.$dirty && depform.depdesc.$invalid">Submit</button>&nbsp;&nbsp;
                            <button type="button" class="btn btn-primary" ng-click="ClearFields()">Clear</button>&nbsp;&nbsp;                            
                            <span style="display:none" >{{ formValid = depform.$valid}}</span>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
            <div class="col-md-0;">
            </div>

        </div>
    </div>
</div>
